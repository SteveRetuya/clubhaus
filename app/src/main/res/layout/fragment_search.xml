<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    tools:context=".admin.SearchFragment">

    <!-- Title Section -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="SEARCH"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Search Event"
        android:padding="12dp"
        android:background="@drawable/rounded_background"
        android:drawablePadding="8dp"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Category Buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_car_meet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Car Meet"
                android:background="@drawable/rounded_background"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_jogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Jogging"
                android:background="@drawable/rounded_background"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_fun_drinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Fun and Drinks"
                android:background="@drawable/rounded_background"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_cosplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Cosplay"
                android:background="@drawable/rounded_background"
                android:textColor="#000" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Event Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/tabs_background"
        android:elevation="4dp">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Meet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camp John Hay, Baguio City"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed in blandit sapien. Duis et erat."
            android:textSize="14sp"
            android:textColor="#757575" />
    </LinearLayout>
</LinearLayout>
