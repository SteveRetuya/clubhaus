<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".admin.HomeFragment">

    <!-- "Home" Text at the Top -->
    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Home"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Title -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Activity"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- Tabs Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/tabs_background"
            android:padding="4dp">

            <!-- Attended Activities Tab -->
            <TextView
                android:id="@+id/tabAttendedActivities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Attended Activities"
                android:textSize="14sp"
                android:textColor="#000000"
                android:background="@drawable/tab_selector" />

            <!-- Activities Nearby Tab -->
            <TextView
                android:id="@+id/tabNearbyActivities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Activities Nearby"
                android:textSize="14sp"
                android:textColor="#000000"
                android:background="@drawable/tab_selector" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Post Items -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Post Item -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- User Image -->
                        <ImageView
                            android:id="@+id/sampleUserImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/user_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_background" />

                        <!-- User Name and Location -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <!-- User Name -->
                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Diddy Rizzler"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <!-- User Location -->
                            <TextView
                                android:id="@+id/userLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Camp John Hay, Baguio City"
                                android:textSize="12sp"
                                android:textColor="#808080" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Post Images -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E0E0E0" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Another Post Item -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- User Image -->
                        <ImageView
                            android:id="@+id/anotherUserImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/user_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_background" />

                        <!-- User Name and Location -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <!-- User Name -->
                            <TextView
                                android:id="@+id/anotherUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chris P. Bacon"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <!-- User Location -->
                            <TextView
                                android:id="@+id/anotherUserLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session Road, Baguio City"
                                android:textSize="12sp"
                                android:textColor="#808080" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Post Images -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E0E0E0" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Another Post Item -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- User Image -->
                        <ImageView
                            android:id="@+id/otherUserImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/user_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_background" />

                        <!-- User Name and Location -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <!-- User Name -->
                            <TextView
                                android:id="@+id/otherUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ben Dover"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <!-- User Location -->
                            <TextView
                                android:id="@+id/otherUserLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harrison Road, Baguio City"
                                android:textSize="12sp"
                                android:textColor="#808080" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Post Images -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E0E0E0" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
